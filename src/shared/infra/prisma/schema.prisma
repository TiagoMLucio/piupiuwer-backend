datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Piu {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_id    String
  text       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("pius")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  cpf        String   @unique
  birth_date String
  phone      String
  about      String?
  avatar     String?
  pius       Piu[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}
